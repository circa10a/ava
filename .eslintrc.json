{
    "env": {
        "es2021": true
    },
    "rules": {
        "no-unused-vars": "off",
        "unused-imports/no-unused-imports": "error",
        "unused-imports/no-unused-vars": [
            "error",
            {
                "vars": "all",
                "varsIgnorePattern": "^_",
                "args": "after-used",
                "argsIgnorePattern": "^_"
            }
        ],
        "eol-last": [
            "error",
            "always"
        ],
        "quotes": [
            2,
            "single",
            {
                "avoidEscape": true
            }
        ],
        "indent": [
            "error",
            2
        ],
        "semi": [
            2,
            "always"
        ]
    },
    "plugins": [
        "unused-imports"
    ]
}